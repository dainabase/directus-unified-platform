<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connexion - Portal Multi-R√¥les</title>
    
    <!-- Tabler CSS -->
    <link href="https://cdn.jsdelivr.net/npm/@tabler/core@1.0.0-beta20/dist/css/tabler.min.css" rel="stylesheet">
    <!-- Tabler Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons@latest/iconfont/tabler-icons.min.css">
    <!-- Custom CSS -->
    <link href="assets/css/custom.css" rel="stylesheet">
</head>
<body class="d-flex flex-column auth-page">
    <div class="page page-center">
        <div class="container container-tight py-4">
            <!-- Logo -->
            <div class="text-center mb-4">
                <a href="index.html" class="navbar-brand navbar-brand-autodark">
                    <img src="assets/img/logo.svg" height="36" alt="Portal">
                </a>
            </div>
            
            <!-- Carte de connexion -->
            <div class="card card-md auth-card">
                <div class="card-body">
                    <h2 class="h2 text-center mb-4">Connexion</h2>
                    
                    
                    <!-- Formulaire de connexion -->
                    <form id="loginForm" autocomplete="off" novalidate>
                        <div class="mb-3">
                            <label class="form-label">Adresse email</label>
                            <input type="email" 
                                   id="email"
                                   name="email"
                                   class="form-control" 
                                   placeholder="votre@email.ch" 
                                   autocomplete="off"
                                   required>
                            <div class="invalid-feedback">
                                Veuillez entrer une adresse email valide.
                            </div>
                        </div>
                        
                        <div class="mb-2">
                            <label class="form-label">
                                Mot de passe
                                <span class="form-label-description">
                                    <a href="forgot-password.html">Mot de passe oubli√© ?</a>
                                </span>
                            </label>
                            <div class="input-group input-group-flat">
                                <input type="password" 
                                       id="password"
                                       name="password"
                                       class="form-control"  
                                       placeholder="Votre mot de passe"  
                                       autocomplete="off"
                                       required>
                                <span class="input-group-text">
                                    <a href="#" class="link-secondary toggle-password" title="Afficher le mot de passe" data-bs-toggle="tooltip">
                                        <i class="ti ti-eye icon"></i>
                                    </a>
                                </span>
                            </div>
                            <div class="invalid-feedback">
                                Le mot de passe est requis.
                            </div>
                        </div>
                        
                        <div class="mb-2">
                            <label class="form-check">
                                <input type="checkbox" id="remember" name="rememberMe" class="form-check-input"/>
                                <span class="form-check-label">Se souvenir de moi</span>
                            </label>
                        </div>
                        
                        <div class="form-footer">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="ti ti-login icon"></i>
                                Se connecter
                            </button>
                        </div>
                    </form>
                </div>
                
                <!-- Options suppl√©mentaires -->
                <div class="hr-text">ou</div>
                
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <a href="#" class="btn w-100">
                                <i class="ti ti-brand-google icon text-google"></i>
                                Connexion avec Google
                            </a>
                        </div>
                        <div class="col">
                            <a href="#" class="btn w-100">
                                <i class="ti ti-brand-facebook icon text-facebook"></i>
                                Connexion avec Facebook
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Lien d'inscription -->
            <div class="text-center text-muted mt-3">
                Pas encore de compte ? <a href="register.html" tabindex="-1">S'inscrire</a>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/@tabler/core@1.0.0-beta20/dist/js/tabler.min.js"></script>
    <script src="assets/js/app.js"></script>
    <script src="assets/js/auth.js"></script>
    <script src="assets/js/notion-connector.js"></script>
    <script src="assets/js/auth-notion.js"></script>
    
    <script>
        // Initialisation de la page de connexion
        document.addEventListener('DOMContentLoaded', function() {
            // Initialiser le module auth de base
            if (window.AuthModule) {
                AuthModule.init();
            }
            
            // Focus sur le champ email
            document.getElementById('email').focus();
            
            // Pour la d√©mo : afficher les comptes disponibles dans la console
            console.log('üîê Comptes de d√©monstration disponibles:');
            console.log('Client: client@demo.ch / demo123');
            console.log('Prestataire: prestataire@demo.ch / demo123');
            console.log('Revendeur: revendeur@demo.ch / demo123');
            console.log('Admin: admin@demo.ch / demo123');
        });
    </script>
</body>
</html>