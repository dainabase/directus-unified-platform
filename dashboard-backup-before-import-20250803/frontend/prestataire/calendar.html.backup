<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Planning & Deadlines - Espace Prestataire</title>
    
    <!-- Tabler CSS -->
    <link href="https://cdn.jsdelivr.net/npm/@tabler/core@1.0.0-beta20/dist/css/tabler.min.css" rel="stylesheet">
    <!-- Tabler Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons@latest/iconfont/tabler-icons.min.css">
    <!-- FullCalendar CSS -->
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.9/index.global.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="../assets/css/custom.css" rel="stylesheet">
    <!-- FullCalendar JS -->
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.9/index.global.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@fullcalendar/core@6.1.9/locales/fr.global.min.js"></script>
</head>
<body class="layout-fluid role-prestataire">
    <div class="page">
        <!-- Navbar Top -->
        <header class="navbar navbar-expand-md navbar-light d-none d-lg-flex d-print-none">
            <!-- Le contenu sera chargé dynamiquement -->
        </header>

        <!-- Sidebar -->
        <aside class="navbar navbar-vertical navbar-expand-lg navbar-transparent">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#sidebar-menu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <!-- Mobile Header -->
                <h1 class="navbar-brand navbar-brand-autodark d-lg-none">
                    <a href=".">
                        <img src="../assets/img/logo.svg" width="110" height="32" alt="Portal" class="navbar-brand-image">
                    </a>
                </h1>
                
                <!-- Mobile User Menu -->
                <div class="navbar-nav flex-row order-md-last d-lg-none">
                    <div class="nav-item d-none d-md-flex me-3">
                        <div class="btn-list-item">
                            <a href="#" class="btn btn-ghost-dark position-relative" data-bs-toggle="dropdown">
                                <i class="ti ti-bell icon"></i>
                                <span class="badge bg-red notification-badge"></span>
                            </a>
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link d-flex lh-1 text-reset p-0" data-bs-toggle="dropdown">
                            <span class="avatar avatar-sm user-avatar"></span>
                        </a>
                    </div>
                </div>
                
                <!-- Sidebar Content -->
                <div class="collapse navbar-collapse" id="sidebar-menu">
                    <!-- Le contenu sera chargé dynamiquement -->
                </div>
            </div>
        </aside>

        <!-- Page Wrapper -->
        <div class="page-wrapper">
            <!-- Page header -->
            <div class="page-header d-print-none">
                <div class="container-xl">
                    <div class="row g-2 align-items-center">
                        <div class="col">
                            <!-- Breadcrumb -->
                            <ol class="breadcrumb" aria-label="breadcrumbs">
                                <li class="breadcrumb-item"><a href="dashboard.html">Accueil</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Calendrier</li>
                            </ol>
                            <h2 class="page-title">
                                Planning & Deadlines
                            </h2>
                        </div>
                        <div class="col-auto ms-auto">
                            <div class="btn-list">
                                <button class="btn btn-white" onclick="calendarToday()">
                                    <i class="ti ti-calendar-event icon"></i>
                                    Aujourd'hui
                                </button>
                                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal-new-event">
                                    <i class="ti ti-plus icon"></i>
                                    Nouvel événement
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Page body -->
            <div class="page-body">
                <div class="container-xl">
                    <div class="row">
                        <!-- Sidebar gauche - Filtres -->
                        <div class="col-lg-3">
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h3 class="card-title">Filtres</h3>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label class="form-label">Types d'événements</label>
                                        <div class="form-selectgroup form-selectgroup-vertical">
                                            <label class="form-selectgroup-item">
                                                <input type="checkbox" name="event-type" value="deadline" class="form-selectgroup-input" checked>
                                                <span class="form-selectgroup-label">
                                                    <span class="badge bg-red me-2">●</span>
                                                    Deadlines
                                                </span>
                                            </label>
                                            <label class="form-selectgroup-item">
                                                <input type="checkbox" name="event-type" value="meeting" class="form-selectgroup-input" checked>
                                                <span class="form-selectgroup-label">
                                                    <span class="badge bg-blue me-2">●</span>
                                                    Meetings
                                                </span>
                                            </label>
                                            <label class="form-selectgroup-item">
                                                <input type="checkbox" name="event-type" value="livrable" class="form-selectgroup-input" checked>
                                                <span class="form-selectgroup-label">
                                                    <span class="badge bg-green me-2">●</span>
                                                    Livrables
                                                </span>
                                            </label>
                                            <label class="form-selectgroup-item">
                                                <input type="checkbox" name="event-type" value="formation" class="form-selectgroup-input" checked>
                                                <span class="form-selectgroup-label">
                                                    <span class="badge bg-purple me-2">●</span>
                                                    Formations
                                                </span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Mini calendrier -->
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Navigation rapide</h3>
                                </div>
                                <div class="card-body">
                                    <div id="miniCalendar"></div>
                                    <div class="mt-3">
                                        <button class="btn btn-white w-100" onclick="exportCalendar()">
                                            <i class="ti ti-download icon"></i>
                                            Exporter (iCal)
                                        </button>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Prochains événements -->
                            <div class="card mt-3">
                                <div class="card-header">
                                    <h3 class="card-title">Prochains événements</h3>
                                </div>
                                <div class="list-group list-group-flush">
                                    <div class="list-group-item">
                                        <div class="row align-items-center">
                                            <div class="col-auto">
                                                <span class="badge bg-red">●</span>
                                            </div>
                                            <div class="col">
                                                <div class="font-weight-medium">Livraison API v2</div>
                                                <div class="text-muted small">Dans 2 jours</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="list-group-item">
                                        <div class="row align-items-center">
                                            <div class="col-auto">
                                                <span class="badge bg-blue">●</span>
                                            </div>
                                            <div class="col">
                                                <div class="font-weight-medium">Review Design</div>
                                                <div class="text-muted small">Demain à 14h</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="list-group-item">
                                        <div class="row align-items-center">
                                            <div class="col-auto">
                                                <span class="badge bg-green">●</span>
                                            </div>
                                            <div class="col">
                                                <div class="font-weight-medium">Démo App Mobile</div>
                                                <div class="text-muted small">Vendredi 10h</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Calendrier principal -->
                        <div class="col-lg-9">
                            <div class="card">
                                <div class="card-body">
                                    <div id="calendar"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal nouvel événement -->
    <div class="modal modal-blur fade" id="modal-new-event" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Nouvel événement</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label class="form-label required">Titre</label>
                                <input type="text" class="form-control" id="eventTitle" placeholder="Ex: Review code API">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label class="form-label required">Type</label>
                                <select class="form-select" id="eventType">
                                    <option value="deadline">Deadline</option>
                                    <option value="meeting">Meeting</option>
                                    <option value="livrable">Livrable</option>
                                    <option value="formation">Formation</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label class="form-label required">Date début</label>
                                <input type="datetime-local" class="form-control" id="eventStart">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label class="form-label">Date fin</label>
                                <input type="datetime-local" class="form-control" id="eventEnd">
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Projet associé</label>
                        <select class="form-select" id="eventProject">
                            <option value="">-- Sélectionner --</option>
                            <option value="1">Projet API - TechCorp</option>
                            <option value="2">App Mobile - StartupFood</option>
                            <option value="3">Design System - DesignStudio</option>
                            <option value="4">Migration Cloud - MobileBanking</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" id="eventDescription" rows="3" placeholder="Détails de l'événement..."></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Participants</label>
                        <select class="form-select" multiple id="eventAttendees">
                            <option value="1">Marie Dubois</option>
                            <option value="2">Jean Martin</option>
                            <option value="3">Pierre Leroy</option>
                            <option value="4">Sophie Laurent</option>
                        </select>
                        <div class="form-hint">Maintenez Ctrl pour sélectionner plusieurs personnes</div>
                    </div>
                    
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label class="form-label">Rappel</label>
                                <select class="form-select" id="eventReminder">
                                    <option value="0">Pas de rappel</option>
                                    <option value="15">15 minutes avant</option>
                                    <option value="30">30 minutes avant</option>
                                    <option value="60">1 heure avant</option>
                                    <option value="1440" selected>1 jour avant</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label class="form-label">Récurrence</label>
                                <select class="form-select" id="eventRecurrence">
                                    <option value="none">Aucune</option>
                                    <option value="daily">Quotidien</option>
                                    <option value="weekly">Hebdomadaire</option>
                                    <option value="monthly">Mensuel</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-link link-secondary" data-bs-dismiss="modal">
                        Annuler
                    </button>
                    <button type="button" class="btn btn-primary" onclick="createEvent()">
                        <i class="ti ti-calendar-plus icon"></i>
                        Créer l'événement
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal détails événement -->
    <div class="modal modal-blur fade" id="modal-event-details" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="eventDetailsTitle">Détails de l'événement</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="eventDetailsBody">
                    <!-- Contenu dynamique -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-link link-secondary" data-bs-dismiss="modal">
                        Fermer
                    </button>
                    <button type="button" class="btn btn-white" onclick="editEvent()">
                        <i class="ti ti-edit icon"></i>
                        Modifier
                    </button>
                    <button type="button" class="btn btn-success" onclick="markEventDone()">
                        <i class="ti ti-check icon"></i>
                        Marquer fait
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Zone pour notifications toast -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3" id="toast-container"></div>

    <!-- Mobile Sidebar Overlay -->
    <div class="sidebar-overlay d-lg-none" onclick="PortalApp.toggleMobileSidebar()"></div>

    <!-- Tabler JS -->
    <script src="https://cdn.jsdelivr.net/npm/@tabler/core@1.0.0-beta20/dist/js/tabler.min.js"></script>
    <!-- Custom JS -->
    <script src="../assets/js/app.js"></script>
    <script src="../assets/js/auth.js"></script>
    <script src="../assets/js/notion-connector.js"></script>
    <script src="../assets/js/auth-notion.js"></script>
    <script src="../assets/js/permissions-notion.js"></script>
    <script src="../assets/js/calendar-notion.js"></script>
    <script src="../assets/js/collaboration.js"></script>
    
    <script>
        // Vérification de l'authentification au chargement
        document.addEventListener('DOMContentLoaded', function() {
            // Vérifier l'authentification
            if (!PortalApp.checkAuth()) {
                console.warn('❌ Utilisateur non authentifié');
                window.location.href = '../login.html';
                return;
            }
            
            // Vérifier que l'utilisateur a le bon rôle
            if (PortalApp.currentRole !== 'prestataire') {
                console.warn('❌ Accès non autorisé pour ce rôle');
                PortalApp.redirectToDashboard();
                return;
            }
            
            // Initialiser le layout
            if (typeof PortalApp.initLayout === 'function') {
                PortalApp.initLayout();
            }
            
            // Marquer le menu comme actif
            PortalApp.setActiveMenuItem('calendar');
        });
        
        // Fonctions globales pour les boutons (redirection vers CalendarNotion)
        function calendarToday() {
            if (window.CalendarNotion && window.CalendarNotion.calendar) {
                window.CalendarNotion.calendar.today();
            }
        }
        
        function createEvent() {
            if (window.CalendarNotion) {
                window.CalendarNotion.createEvent();
            }
        }
        
        function markEventDone() {
            if (window.CalendarNotion) {
                window.CalendarNotion.markEventDone();
            }
        }
        
        function exportCalendar() {
            if (window.CalendarNotion) {
                window.CalendarNotion.exportCalendar();
            }
        }
    </script>
</body>
</html>
