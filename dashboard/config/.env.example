# Environment Configuration Example
# Copy this file to .env and update with your values

# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portal_db
DB_USER=portal_user
DB_PASSWORD=your_password_here

# Notion Integration
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_USERS=your_users_database_id
NOTION_DATABASE_PROJECTS=your_projects_database_id
NOTION_DATABASE_DOCUMENTS=your_documents_database_id

# Email Service
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your_email_api_key
EMAIL_FROM=noreply@yourcompany.com

# Authentication
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# Two-Factor Authentication
TOTP_ISSUER=Portal Superadmin
TOTP_WINDOW=2

# File Storage
STORAGE_TYPE=local
STORAGE_PATH=./uploads
MAX_FILE_SIZE=10485760

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# External APIs
REVOLUT_API_KEY=your_revolut_api_key
REVOLUT_ENVIRONMENT=sandbox

# OCR Service
OCR_ENABLED=true
OCR_LANGUAGES=fra+eng+deu+ita

# Monitoring
SENTRY_DSN=your_sentry_dsn
ANALYTICS_ID=your_analytics_id