            const type = document.getElementById('calcProductType').value;
            const amount = parseFloat(document.getElementById('calcAmount').value) || 0;
            const isNewClient = document.getElementById('calcNewClient').checked;
            const hasVolumeBonus = document.getElementById('calcVolumeBonus').checked;
            
            // Taux de base
            const rates = {
                license: 0.10,
                service: 0.08,
                support: 0.05,
                training: 0.15
            };
            
            let rate = rates[type];
            let base = amount * rate;
            let bonus = 0;
            
            // Bonus licence > 100k
            if (type === 'license' && amount > 100000) {
                rate = 0.12;
                base = amount * rate;
            }
            
            // Bonus volume
            if (hasVolumeBonus) {
                bonus += amount * 0.02;
            }
            
            // Prime nouveau client
            if (isNewClient && type === 'license') {
                bonus += 1000;
            }
            
            const total = base + bonus;
            
            // Afficher résultat
            document.getElementById('resultBase').textContent = PortalApp.formatCurrency(base);
            document.getElementById('resultBonus').textContent = PortalApp.formatCurrency(bonus);
            document.getElementById('resultTotal').textContent = PortalApp.formatCurrency(total);
            document.getElementById('calcResult').classList.remove('d-none');
        }
    </script>
</body>
</html>
