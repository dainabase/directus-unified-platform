    <script>
        // Vérification de l'authentification au chargement
        document.addEventListener('DOMContentLoaded', function() {
            // Vérifier l'authentification
            if (!PortalApp.checkAuth()) {
                console.warn('❌ Utilisateur non authentifié');
                window.location.href = '../login.html';
                return;
            }
            
            // Vérifier que l'utilisateur a le bon rôle
            if (PortalApp.currentRole !== 'revendeur') {
                console.warn('❌ Accès non autorisé pour ce rôle');
                PortalApp.redirectToDashboard();
                return;
            }
            
            // Initialiser le layout
            if (typeof PortalApp.initLayout === 'function') {
                PortalApp.initLayout();
            }
            
            // Marquer le menu comme actif
            PortalApp.setActiveMenuItem('commissions');
            
            // Initialiser DataTable
            $('#commissionsTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/fr-FR.json'
                },
                order: [[0, 'desc']], // Trier par date décroissante
                pageLength: 25
            });
            
            // Graphique évolution mensuelle
            const monthlyOptions = {
                series: [{
                    name: 'Commissions',
                    data: [3200, 4100, 3800, 5200, 4500, 5800, 6200, 5400, 6800, 7200, 6500, 4850]
                }],
                chart: {
                    type: 'bar',
                    height: 300,
                    toolbar: {
                        show: false
                    }
                },
                plotOptions: {
                    bar: {
                        borderRadius: 6,
                        columnWidth: '60%',
                    }
                },
                dataLabels: {
                    enabled: false
                },
                colors: ['#10b981'],
                xaxis: {
                    categories: ['Jan', 'Fév', 'Mar', 'Avr', 'Mai', 'Juin', 'Juil', 'Août', 'Sep', 'Oct', 'Nov', 'Déc'],
                },
                yaxis: {
                    labels: {
                        formatter: function (val) {
                            return PortalApp.formatCurrency(val);
                        }
                    }
                },
                tooltip: {
                    y: {
                        formatter: function (val) {
                            return PortalApp.formatCurrency(val);
                        }
                    }
                }
            };
            
            new ApexCharts(document.querySelector("#chart-commissions-monthly"), monthlyOptions).render();
            
            // Graphique répartition par produit
            const productsOptions = {
                series: [15420, 8730, 4300],
                chart: {
                    type: 'donut',
                    height: 260
                },
                labels: ['Licences', 'Services', 'Support'],
                colors: ['#206bc4', '#f59e0b', '#a855f7'],
                legend: {
                    show: false
                },
                dataLabels: {
                    enabled: true,
                    formatter: function (val, opts) {
                        return opts.w.config.labels[opts.seriesIndex] + '\n' + val.toFixed(1) + '%';
                    }
                },
                tooltip: {
                    y: {
                        formatter: function(val) {
                            return PortalApp.formatCurrency(val);
                        }
                    }
                }
            };
            
            new ApexCharts(document.querySelector("#chart-commissions-products"), productsOptions).render();
        });
        
        // Calculateur de commission
