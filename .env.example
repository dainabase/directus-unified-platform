# ============================================
# DIRECTUS UNIFIED PLATFORM — Environment Variables
# ============================================
# Copy this file to .env and fill in real values.
# Variables marked <REQUIRED> must be set before starting.
# Variables marked <OPTIONAL> enable optional features.

# --- General ---
NODE_ENV=development
UNIFIED_PORT=3000

# --- Directus ---
DIRECTUS_URL=http://localhost:8055
DIRECTUS_ADMIN_TOKEN=<REQUIRED>

# --- Database (PostgreSQL) ---
DB_HOST=localhost
DB_PORT=5432
DB_NAME=<REQUIRED>
DB_USER=<REQUIRED>
DB_PASSWORD=<REQUIRED>

# --- Redis ---
REDIS_URL=redis://localhost:6379

# --- JWT Authentication ---
JWT_SECRET=<REQUIRED>
JWT_REFRESH_SECRET=<REQUIRED>
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# --- CORS ---
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# --- Finance API Key (service-to-service) ---
FINANCE_API_KEY=<OPTIONAL>

# --- Invoice Ninja ---
INVOICE_NINJA_URL=<OPTIONAL>
INVOICE_NINJA_TOKEN=<OPTIONAL>

# --- Revolut Business API ---
REVOLUT_CLIENT_ID=<OPTIONAL>
REVOLUT_ENV=sandbox
# Private keys stored in integrations/revolut/keys/ (never committed)

# --- Mautic ---
MAUTIC_URL=<OPTIONAL>
MAUTIC_CLIENT_ID=<OPTIONAL>
MAUTIC_CLIENT_SECRET=<OPTIONAL>

# --- ERPNext ---
ERPNEXT_URL=<OPTIONAL>
ERPNEXT_API_KEY=<OPTIONAL>
ERPNEXT_API_SECRET=<OPTIONAL>

# --- DocuSeal ---
DOCUSEAL_URL=<OPTIONAL>
DOCUSEAL_API_KEY=<OPTIONAL>

# --- OpenAI (OCR / AI features / LLM lead extraction) ---
OPENAI_API_KEY=<OPTIONAL>
OPENAI_MODEL=gpt-4o-mini

# --- Anthropic (LLM lead extraction — primary, OpenAI as fallback) ---
ANTHROPIC_API_KEY=<OPTIONAL>

# --- Phase F: Lead Capture ---

# F-01: WordPress Fluent Form webhook (HMAC signature verification)
WP_WEBHOOK_SECRET=<OPTIONAL>

# F-02: WhatsApp Business API (Meta)
WHATSAPP_VERIFY_TOKEN=<OPTIONAL>
WHATSAPP_ACCESS_TOKEN=<OPTIONAL>
WHATSAPP_PHONE_NUMBER_ID=<OPTIONAL>

# F-03: IMAP Email Monitor (info@hypervisual.ch)
IMAP_HOST=mail.hypervisual.ch
IMAP_PORT=993
IMAP_USER=info@hypervisual.ch
IMAP_PASSWORD=<OPTIONAL>
IMAP_TLS=true

# F-04: Ringover Phone Call Polling
RINGOVER_API_KEY=<OPTIONAL>

# --- Cloudinary ---
CLOUDINARY_CLOUD_NAME=<OPTIONAL>
CLOUDINARY_API_KEY=<OPTIONAL>
CLOUDINARY_API_SECRET=<OPTIONAL>

# --- Notion ---
NOTION_TOKEN=<OPTIONAL>
NOTION_PROJECTS_DB=<OPTIONAL>
NOTION_PRESTATAIRES_DB=<OPTIONAL>
