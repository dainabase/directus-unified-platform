{
  "name": "revolut-business-integration",
  "version": "1.0.0",
  "description": "Revolut Business API v2 integration for Directus Unified Platform",
  "type": "module",
  "main": "api/index.js",
  "scripts": {
    "dev": "nodemon api/webhooks.js",
    "sync": "node sync/scheduler.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "setup": "node setup.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.7.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "dotenv": "^16.4.5",
    "winston": "^3.11.0",
    "uuid": "^9.0.1",
    "@directus/sdk": "^17.0.0",
    "node-jose": "^2.2.0",
    "crypto": "^1.0.1",
    "date-fns": "^3.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2",
    "@types/jest": "^29.5.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "api/**/*.js",
      "sync/**/*.js",
      "utils/**/*.js"
    ]
  },
  "keywords": ["revolut", "banking", "api", "directus", "integration"],
  "author": "Directus Team",
  "license": "MIT"
}