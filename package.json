{
  "name": "directus-unified-platform",
  "version": "2.0.0",
  "type": "module",
  "packageManager": "pnpm@9.15.1",
  "description": "Plateforme unifiée avec Directus CMS et 4 portails métier",
  "main": "src/backend/server.js",
  "scripts": {
    "dev": "concurrently \"pnpm:dev:*\"",
    "dev:backend": "nodemon src/backend/server.js",
    "dev:directus": "docker-compose up directus",
    "dev:docs": "echo 'Documentation disponible dans /docs'",
    "dev:simple": "./dev.sh",
    "build": "pnpm run build:frontend && pnpm run build:backend",
    "build:frontend": "echo 'Build frontend - TODO'",
    "build:backend": "echo 'Build backend - TODO'",
    "start": "node src/backend/server.js",
    "start:prod": "NODE_ENV=production node src/backend/server.js",
    "start:platform": "./start-platform.sh",
    "stop:platform": "./stop-platform.sh",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs",
    "pm2:restart": "pm2 restart all",
    "monitor": "node monitor-health.js",
    "test": "jest || echo 'Tests à configurer'",
    "test:watch": "jest --watch || echo 'Tests à configurer'",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md,mdx,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md,mdx,yml,yaml}\"",
    "migrate": "node migration/active/run-migration.js || echo 'Migration disponible'",
    "migrate:status": "node migration/reports/status/check-status.js || echo 'Status disponible'",
    "backup": "pnpm run backup:db && pnpm run backup:files",
    "backup:db": "node scripts/maintenance/backup-db.js || echo 'Script backup à créer'",
    "backup:files": "node scripts/maintenance/backup-files.js || echo 'Script backup à créer'",
    "changeset": "changeset",
    "version-packages": "changeset version && pnpm install",
    "release-packages": "pnpm -r --filter @dainabase/ui run prepublish && pnpm -r --filter @dainabase/ui publish --no-git-checks",
    "prepare": "simple-git-hooks",
    "pre-commit": "lint-staged"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm run pre-commit",
    "commit-msg": "npx --no -- commitlint --edit $1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md,mdx}": [
      "prettier --write"
    ],
    "*.{yml,yaml}": [
      "prettier --write"
    ],
    "packages/ui/**/*.{ts,tsx}": [
      "pnpm --filter @dainabase/ui typecheck"
    ]
  },
  "dependencies": {
    "@directus/sdk": "^17.0.2",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.66.0",
    "chalk": "^5.5.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "directus-mcp-server": "^1.0.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "http-proxy-middleware": "^3.0.5",
    "ioredis": "^5.8.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.17.2",
    "qrcode": "^1.5.4",
    "tesseract.js": "^6.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "concurrently": "^8.0.1",
    "eslint": "^8.39.0",
    "jest": "^29.5.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "simple-git-hooks": "^2.9.0"
  }
}
