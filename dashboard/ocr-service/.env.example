# Environment
NODE_ENV=production
PORT=3001

# Redis
REDIS_URL=redis://redis:6379

# OCR Configuration
TESSERACT_LANG=fra+eng+deu+ita
WORKERS=4
MAX_FILE_SIZE=50MB

# Security
JWT_SECRET=your-jwt-secret-must-match-main-api
ALLOWED_ORIGINS=http://localhost:8000,https://portal.hypervisual.ch

# Logging
LOG_LEVEL=info

# Performance
ENABLE_PREPROCESSING=true
ENABLE_CACHE=true
CACHE_TTL=3600

# Queue Configuration
MAX_JOBS_PER_WORKER=3
JOB_TIMEOUT=120000