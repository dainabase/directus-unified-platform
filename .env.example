# ═══════════════════════════════════════
# DIRECTUS UNIFIED PLATFORM — .env.example
# ═══════════════════════════════════════
# Copier ce fichier en .env et remplir les valeurs
# NE JAMAIS committer le fichier .env
#
# Variables marquees [REQUIRED] : le serveur ne demarre pas sans elles (en production)
# Variables marquees [OPTIONAL] : activent des fonctionnalites optionnelles

# === Directus === [REQUIRED]
DIRECTUS_URL=http://localhost:8055
DIRECTUS_ADMIN_TOKEN=VOTRE_TOKEN_ADMIN_ICI

# === Database (PostgreSQL) === [REQUIRED]
DB_HOST=localhost
DB_PORT=5432
DB_NAME=directus
DB_USER=directus
DB_PASSWORD=VOTRE_MOT_DE_PASSE_ICI

# === Redis === [REQUIRED]
REDIS_URL=redis://localhost:6379

# === JWT Authentication === [REQUIRED]
JWT_SECRET=GENERER_AVEC_openssl_rand_-base64_64
JWT_REFRESH_SECRET=GENERER_AVEC_openssl_rand_-base64_64
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# === Environment === [OPTIONAL]
NODE_ENV=development
UNIFIED_PORT=3000

# === CORS === [OPTIONAL]
# Liste separee par des virgules des origines autorisees
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# === Finance API Key (service-to-service) === [OPTIONAL]
FINANCE_API_KEY=

# === OpenAI (OCR / AI features / LLM lead extraction) === [OPTIONAL]
OPENAI_API_KEY=sk-proj-VOTRE_CLE_ICI
OPENAI_MODEL=gpt-4o-mini

# === Anthropic (LLM lead extraction — primary, OpenAI as fallback) === [OPTIONAL]
ANTHROPIC_API_KEY=

# === Invoice Ninja === [OPTIONAL]
INVOICE_NINJA_URL=https://invoicing.hypervisual.ch
INVOICE_NINJA_TOKEN=VOTRE_TOKEN_ICI

# === Revolut Business API === [OPTIONAL]
REVOLUT_CLIENT_ID=
REVOLUT_ACCESS_TOKEN=
REVOLUT_REFRESH_TOKEN=
REVOLUT_PRIVATE_KEY=
REVOLUT_PRIVATE_KEY_PATH=./integrations/revolut/keys/private.pem
REVOLUT_WEBHOOK_SECRET=
REVOLUT_ENV=sandbox
REVOLUT_SANDBOX=true

# === ERPNext === [OPTIONAL]
ERPNEXT_URL=
ERPNEXT_API_KEY=
ERPNEXT_API_SECRET=

# === Mautic === [OPTIONAL]
MAUTIC_URL=
MAUTIC_CLIENT_ID=
MAUTIC_CLIENT_SECRET=

# === DocuSeal === [OPTIONAL]
DOCUSEAL_URL=
DOCUSEAL_API_KEY=

# === Notion (legacy) === [OPTIONAL]
NOTION_TOKEN=
NOTION_PROJECTS_DB=
NOTION_PRESTATAIRES_DB=

# === Phase F: Lead Capture === [OPTIONAL]

# F-01: WordPress Fluent Form webhook (HMAC signature verification)
WP_WEBHOOK_SECRET=

# F-02: WhatsApp Business API (Meta)
WHATSAPP_VERIFY_TOKEN=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

# F-03: IMAP Email Monitor (info@hypervisual.ch)
IMAP_HOST=mail.hypervisual.ch
IMAP_PORT=993
IMAP_USER=info@hypervisual.ch
IMAP_PASSWORD=
IMAP_TLS=true

# F-04: Ringover Phone Call Polling
RINGOVER_API_KEY=

# === Cloudinary === [OPTIONAL]
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
