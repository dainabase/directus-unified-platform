# Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# ============================================
# CHROMATIC - Visual Testing
# ============================================
# Get your token from: https://www.chromatic.com/manage
CHROMATIC_PROJECT_TOKEN=your_chromatic_token_here

# ============================================
# GITHUB - Package Registry
# ============================================
# Required for publishing to GitHub Packages
# Create a PAT with 'write:packages' scope
GITHUB_TOKEN=your_github_pat_here
NPM_TOKEN=your_github_pat_here

# ============================================
# VERCEL - Deployment (Optional)
# ============================================
# Required if deploying to Vercel
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_vercel_project_id

# ============================================
# DIRECTUS - CMS Backend
# ============================================
# Directus instance configuration
DIRECTUS_URL=http://localhost:8055
DIRECTUS_ADMIN_EMAIL=admin@example.com
DIRECTUS_ADMIN_PASSWORD=your_secure_password
DIRECTUS_KEY=your_directus_key
DIRECTUS_SECRET=your_directus_secret

# ============================================
# DATABASE - PostgreSQL
# ============================================
DB_CLIENT=postgres
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=directus
DB_USER=directus
DB_PASSWORD=directus

# ============================================
# DEVELOPMENT
# ============================================
# Local development settings
NODE_ENV=development
PORT=3000
STORYBOOK_PORT=6006

# ============================================
# MONITORING (Optional)
# ============================================
# Error tracking and analytics
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_id_here

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
# Enable/disable features
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_DEBUG_MODE=false
