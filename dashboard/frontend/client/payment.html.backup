<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paiement sécurisé - Espace Client</title>
    
    <!-- Tabler CSS -->
    <link href="https://cdn.jsdelivr.net/npm/@tabler/core@1.0.0-beta20/dist/css/tabler.min.css" rel="stylesheet">
    <!-- Tabler Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons@latest/iconfont/tabler-icons.min.css">
    <!-- Custom CSS -->
    <link href="../assets/css/custom.css" rel="stylesheet">
</head>
<body class="layout-fluid role-client">
    <div class="page">
        <!-- Navbar Top -->
        <header class="navbar navbar-expand-md navbar-light d-none d-lg-flex d-print-none">
            <!-- Le contenu sera chargé dynamiquement -->
        </header>

        <!-- Sidebar -->
        <aside class="navbar navbar-vertical navbar-expand-lg navbar-transparent">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#sidebar-menu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <!-- Mobile Header -->
                <h1 class="navbar-brand navbar-brand-autodark d-lg-none">
                    <a href=".">
                        <img src="../assets/img/logo.svg" width="110" height="32" alt="Portal" class="navbar-brand-image">
                    </a>
                </h1>
                
                <!-- Mobile User Menu -->
                <div class="navbar-nav flex-row order-md-last d-lg-none">
                    <div class="nav-item d-none d-md-flex me-3">
                        <div class="btn-list-item">
                            <a href="#" class="btn btn-ghost-dark position-relative" data-bs-toggle="dropdown">
                                <i class="ti ti-bell icon"></i>
                                <span class="badge bg-red notification-badge"></span>
                            </a>
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link d-flex lh-1 text-reset p-0" data-bs-toggle="dropdown">
                            <span class="avatar avatar-sm user-avatar"></span>
                        </a>
                    </div>
                </div>
                
                <!-- Sidebar Content -->
                <div class="collapse navbar-collapse" id="sidebar-menu">
                    <!-- Le contenu sera chargé dynamiquement -->
                </div>
            </div>
        </aside>

        <!-- Page Wrapper -->
        <div class="page-wrapper">
            <!-- Page header -->
            <div class="page-header d-print-none">
                <div class="container-xl">
                    <div class="row g-2 align-items-center">
                        <div class="col">
                            <!-- Breadcrumb -->
                            <ol class="breadcrumb" aria-label="breadcrumbs">
                                <li class="breadcrumb-item"><a href="dashboard.html">Accueil</a></li>
                                <li class="breadcrumb-item"><a href="finances.html">Finances</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Paiement</li>
                            </ol>
                            <h2 class="page-title">
                                Paiement sécurisé
                            </h2>
                        </div>
                        <div class="col-auto ms-auto">
                            <div class="text-muted">
                                <i class="ti ti-lock icon text-success"></i>
                                Connexion sécurisée SSL
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Page body -->
            <div class="page-body">
                <div class="container-xl">
                    <div class="row">
                        <!-- Colonne gauche : Formulaire de paiement -->
                        <div class="col-lg-8">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Choisissez votre méthode de paiement</h3>
                                </div>
                                <div class="card-body">
                                    <!-- Méthodes de paiement -->
                                    <div class="form-selectgroup payment-methods mb-4">
                                        <label class="form-selectgroup-item">
                                            <input type="radio" name="payment-method" value="card" class="form-selectgroup-input" checked>
                                            <span class="form-selectgroup-label payment-method-card">
                                                <i class="ti ti-credit-card icon me-2"></i>
                                                Carte bancaire
                                            </span>
                                        </label>
                                        <label class="form-selectgroup-item">
                                            <input type="radio" name="payment-method" value="transfer" class="form-selectgroup-input">
                                            <span class="form-selectgroup-label payment-method-card">
                                                <i class="ti ti-building-bank icon me-2"></i>
                                                Virement bancaire
                                            </span>
                                        </label>
                                        <label class="form-selectgroup-item">
                                            <input type="radio" name="payment-method" value="twint" class="form-selectgroup-input">
                                            <span class="form-selectgroup-label payment-method-card">
                                                <i class="ti ti-qrcode icon me-2"></i>
                                                TWINT
                                            </span>
                                        </label>
                                    </div>
                                    
                                    <!-- Formulaire carte bancaire -->
                                    <div id="payment-card" class="payment-form">
                                        <form id="card-payment-form">
                                            <div class="mb-3">
                                                <label class="form-label">Numéro de carte</label>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" id="card-number" placeholder="1234 5678 9012 3456" maxlength="19" required>
                                                    <span class="input-group-text">
                                                        <i class="ti ti-credit-card"></i>
                                                    </span>
                                                </div>
                                                <div class="mt-1">
                                                    <img src="https://img.icons8.com/color/48/000000/visa.png" alt="Visa" height="24" class="me-1">
                                                    <img src="https://img.icons8.com/color/48/000000/mastercard.png" alt="Mastercard" height="24" class="me-1">
                                                    <img src="https://img.icons8.com/color/48/000000/amex.png" alt="Amex" height="24">
                                                </div>
                                            </div>
                                            
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="mb-3">
                                                        <label class="form-label">Date d'expiration</label>
                                                        <input type="text" class="form-control" id="card-expiry" placeholder="MM/YY" maxlength="5" required>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="mb-3">
                                                        <label class="form-label">Code CVV</label>
                                                        <div class="input-group">
                                                            <input type="text" class="form-control" id="card-cvv" placeholder="123" maxlength="4" required>
                                                            <span class="input-group-text" data-bs-toggle="tooltip" title="Code à 3 ou 4 chiffres au dos de votre carte">
                                                                <i class="ti ti-help"></i>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <div class="mb-3">
                                                <label class="form-label">Nom du titulaire</label>
                                                <input type="text" class="form-control" id="card-name" placeholder="JEAN DUPONT" required>
                                            </div>
                                            
                                            <div class="form-check mb-3">
                                                <input type="checkbox" class="form-check-input" id="save-card">
                                                <label class="form-check-label" for="save-card">
                                                    Sauvegarder cette carte pour les futurs paiements
                                                </label>
                                            </div>
                                        </form>
                                    </div>
                                    
                                    <!-- Virement bancaire -->
                                    <div id="payment-transfer" class="payment-form" style="display: none;">
                                        <div class="alert alert-info">
                                            <h4 class="alert-title">Coordonnées bancaires</h4>
                                            <div class="mt-3">
                                                <p class="mb-2"><strong>Banque:</strong> Crédit Suisse</p>
                                                <p class="mb-2"><strong>IBAN:</strong> CH93 0076 2011 6238 5295 7</p>
                                                <p class="mb-2"><strong>BIC/SWIFT:</strong> CRESCHZZ80A</p>
                                                <p class="mb-2"><strong>Référence:</strong> <span id="payment-reference">FAC-2024-0124</span></p>
                                                <div class="mt-3">
                                                    <button class="btn btn-sm btn-primary" onclick="copyIBAN()">
                                                        <i class="ti ti-copy icon"></i>
                                                        Copier l'IBAN
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="text-center mt-4">
                                            <div class="qr-code-container">
                                                <canvas id="qr-transfer"></canvas>
                                                <p class="text-muted small mt-2">Scannez ce QR code avec votre application bancaire</p>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <!-- TWINT -->
                                    <div id="payment-twint" class="payment-form" style="display: none;">
                                        <div class="text-center">
                                            <img src="https://www.twint.ch/content/uploads/2019/11/twint-logo.svg" alt="TWINT" height="60" class="mb-4">
                                            <p class="text-muted mb-4">Scannez ce code QR avec votre application TWINT</p>
                                            <div class="qr-code-container">
                                                <canvas id="qr-twint"></canvas>
                                            </div>
                                            <div class="mt-4">
                                                <p class="text-muted">Ou entrez ce code dans l'application:</p>
                                                <h3 class="font-monospace">4578 9012 3456</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Sécurité -->
                            <div class="card mt-3">
                                <div class="card-body">
                                    <div class="row align-items-center">
                                        <div class="col">
                                            <h4 class="mb-1">Paiement 100% sécurisé</h4>
                                            <p class="text-muted mb-0">Vos données sont cryptées et protégées par SSL</p>
                                        </div>
                                        <div class="col-auto">
                                            <img src="https://img.icons8.com/color/48/000000/ssl-security.png" alt="SSL" height="40">
                                            <img src="https://img.icons8.com/color/48/000000/security-checked.png" alt="Secure" height="40">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Colonne droite : Récapitulatif -->
                        <div class="col-lg-4">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Récapitulatif de commande</h3>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="text-muted">Facture:</span>
                                            <strong id="invoice-number">FAC-2024-0124</strong>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="text-muted">Date:</span>
                                            <span>10.01.2024</span>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <span class="text-muted">Description:</span>
                                            <span>Design maquettes</span>
                                        </div>
                                    </div>
                                    
                                    <hr>
                                    
                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>Sous-total HT</span>
                                            <span>CHF 8'056.00</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>TVA 8.1%</span>
                                            <span>CHF 652.54</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>Remise client</span>
                                            <span class="text-success">- CHF 208.54</span>
                                        </div>
                                    </div>
                                    
                                    <hr>
                                    
                                    <div class="d-flex justify-content-between align-items-center mb-4">
                                        <span class="h4 mb-0">Total à payer</span>
                                        <span class="h3 mb-0 text-primary">CHF 8'500.00</span>
                                    </div>
                                    
                                    <button class="btn btn-success btn-lg w-100" id="pay-button" onclick="processPayment()">
                                        <i class="ti ti-lock icon"></i>
                                        Payer CHF 8'500.00
                                    </button>
                                    
                                    <div class="text-center mt-3">
                                        <a href="finances.html" class="text-muted">
                                            <i class="ti ti-arrow-left icon"></i>
                                            Annuler et retourner
                                        </a>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Informations -->
                            <div class="card mt-3">
                                <div class="card-body">
                                    <h5>Besoin d'aide?</h5>
                                    <p class="text-muted mb-2">Notre équipe est là pour vous aider</p>
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="ti ti-phone icon me-2"></i>
                                        <span>+41 22 123 45 67</span>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-mail icon me-2"></i>
                                        <span>support@votreentreprise.ch</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de succès -->
    <div class="modal modal-blur fade" id="modal-success" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body text-center py-5">
                    <i class="ti ti-circle-check icon mb-3 text-success" style="font-size: 48px;"></i>
                    <h3>Paiement réussi!</h3>
                    <div class="text-muted">Votre paiement de CHF 8'500.00 a été traité avec succès.</div>
                </div>
                <div class="modal-footer">
                    <div class="w-100">
                        <div class="row">
                            <div class="col">
                                <a href="finances.html" class="btn btn-success w-100">
                                    Retour aux finances
                                </a>
                            </div>
                            <div class="col">
                                <a href="#" class="btn btn-white w-100" onclick="downloadReceipt()">
                                    Télécharger reçu
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Zone pour notifications toast -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3" id="toast-container"></div>

    <!-- Mobile Sidebar Overlay -->
    <div class="sidebar-overlay d-lg-none" onclick="PortalApp.toggleMobileSidebar()"></div>

    <!-- Tabler JS -->
    <script src="https://cdn.jsdelivr.net/npm/@tabler/core@1.0.0-beta20/dist/js/tabler.min.js"></script>
    <!-- QRCode.js pour générer les QR codes -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
    <!-- Custom JS -->
    <script src="../assets/js/app.js"></script>
    <script src="../assets/js/auth.js"></script>
    <script src="../assets/js/notion-connector.js"></script>
    <script src="../assets/js/auth-notion.js"></script>
    <script src="../assets/js/permissions-notion.js"></script>
    <script src="../assets/js/payment.js"></script>
    
    <script>
        // Vérification de l'authentification au chargement
        document.addEventListener('DOMContentLoaded', function() {
            // Vérifier l'authentification
            if (!PortalApp.checkAuth()) {
                console.warn('❌ Utilisateur non authentifié');
                window.location.href = '../login.html';
                return;
            }
            
            // Vérifier que l'utilisateur a le bon rôle
            if (PortalApp.currentRole !== 'client') {
                console.warn('❌ Accès non autorisé pour ce rôle');
                PortalApp.redirectToDashboard();
                return;
            }
            
            // Initialiser le layout
            if (typeof PortalApp.initLayout === 'function') {
                PortalApp.initLayout();
            }
            
            // Marquer le menu comme actif
            PortalApp.setActiveMenuItem('finances');
            
            // Récupérer l'ID de la facture depuis l'URL
            const urlParams = new URLSearchParams(window.location.search);
            const invoiceId = urlParams.get('invoice');
            
            if (invoiceId) {
                document.getElementById('invoice-number').textContent = invoiceId;
                document.getElementById('payment-reference').textContent = invoiceId;
            }
            
            // Initialiser les méthodes de paiement
            if (typeof initPaymentMethods === 'function') {
                initPaymentMethods();
            }
        });
    </script>
</body>
</html>
